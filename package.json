    "@testing-library/jest-dom": "^6.0.0",
    "jsdom": "^22.1.0",
    "@vitejs/plugin-react": "^5.1.0",
    "playwright": "^1.40.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.18.0"
  }
}
